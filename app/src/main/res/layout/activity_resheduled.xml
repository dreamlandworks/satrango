<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResheduledActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <LinearLayout
                android:background="@drawable/mybookingfrist"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="2"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/ic_resheduleddetails"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/RESHEDULED"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="OTP"/>

                    <TextView
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="3455"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:text="Scheduled on :"
                                android:textSize="@dimen/_12sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="right"
                                android:text="Today"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_callvendor"/>
                            <ImageView
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_message"/>

                            <TextView
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:gravity="right"
                                android:textSize="@dimen/_14sdp"
                                android:layout_gravity="right"
                                android:text="â‚¹139.00"
                                android:textStyle="bold"
                                android:textColor="@color/red"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Time :"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:layout_gravity="right"
                            android:text="09:00 AM "
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:layout_gravity="right"
                            android:text="to 12:00 PM"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                app:civ_border_width="@dimen/_3sdp"
                                android:src="@drawable/images"
                                app:civ_border_color="@color/yellow"/>

                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.3"
                                android:textAlignment="center"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:drawableRight="@drawable/ic_stars"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight=".5"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="Mr. Pablo Escobar"/>


                            <TextView
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:drawableRight="@drawable/ic_nexts"
                                android:layout_gravity="right"
                                android:text="Being a Blue collar Job this needs to be uniquely coloured so that users can easily understand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_nexts"/>

                            <TextView
                                android:drawablePadding="@dimen/_10sdp"
                                android:drawableLeft="@drawable/ic_vendorlocation"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:text="Benz Circle, Vijayawada"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>