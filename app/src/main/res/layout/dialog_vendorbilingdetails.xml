<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_positive_round"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtclose"
            android:drawableRight="@drawable/ic_cross"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textAlignment="center"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/vendororange"
            android:text="Bill Details" />



    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Amount"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/txtbookingamount"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=" ₹ "
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/quicksand_bold"/>



    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adv for Material"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/txtextracharge"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=" ₹ "
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/quicksand_bold"/>



    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Professional Charges"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/txtprocharge"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=" ₹ "
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/quicksand_bold"/>



    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paid"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/ttxtrefund"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" ₹ "
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/quicksand_bold"/>



    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textStyle="bold"
            android:textColor="@color/vendorprimerycolor"
            android:textSize="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/txttotal"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=" ₹"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/quicksand_bold"/>



    </LinearLayout>


    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnsubmit"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/greenbutton"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp" />

    </LinearLayout>

</LinearLayout>