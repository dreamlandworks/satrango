<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Booknow.BooknowSingleMoveActivity">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent">


        <ImageView
            android:id="@+id/imgback"
            android:layout_gravity="left"
            android:src="@drawable/ic_backs"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"/>

        <TextView
            android:id="@+id/txtback"
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Search" />

        <TextView
            android:layout_marginLeft="@dimen/_100sdp"
            android:id="@+id/textView"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Booking Details" />

        <ImageView
            android:id="@+id/img_profile"
            android:layout_alignParentEnd="true"
            android:layout_weight="1.1"
            android:layout_gravity="right"
            android:src="@drawable/images"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>




    <ImageView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_yellowline"/>

    <ScrollView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="-5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@color/colorPrimaryDark"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight=".8"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="@font/quickstandbold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/_16sdp"
                                android:text="Complete your Booking"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/circlebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_gravity="center"
                                    android:background="@color/grey_400" />

                                <TextView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/inactivebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="2"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_gravity="center"
                                    android:background="@color/grey_400" />

                                <TextView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/inactivebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="3"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



                <View
                    android:layout_marginTop="@dimen/_200sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/colorPrimaryDark"/>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:padding="@dimen/_5sdp"
                                    android:weightSum="3"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_weight="1.2"
                                        android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">


                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="60dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:src="@drawable/images"
                                            app:civ_border_color="@color/colorPrimaryDark"
                                            app:civ_border_width="@dimen/_2sdp" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_margin="@dimen/_10sdp"
                                        android:layout_weight=".7"
                                        android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_weight=".7"
                                            android:layout_width="match_parent"
                                            android:orientation="horizontal"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:id="@+id/txtname"
                                                android:fontFamily="@font/poppinsmedium"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/black"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/_18sdp"
                                                android:text="John Doe"/>


                                            <TextView
                                                android:id="@+id/txtrank"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:fontFamily="@font/poppinsmedium"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/black"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/_20sdp"
                                                android:text="#"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_weight=".7"
                                            android:layout_width="match_parent"
                                            android:orientation="horizontal"
                                            android:layout_height="wrap_content">


                                            <TextView
                                                android:id="@+id/txt_skill"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/gray"
                                                android:textSize="@dimen/_14sdp"
                                                android:text="AC Mechanic"/>

                                            <TextView
                                                android:id="@+id/txtrating"
                                                android:layout_marginLeft="@dimen/_15sdp"
                                                android:drawableRight="@drawable/ic_stars"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/gray"
                                                android:textSize="@dimen/_14sdp"
                                                android:text="4.4"/>


                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_weight=".7"
                                            android:layout_width="match_parent"
                                            android:orientation="horizontal"
                                            android:layout_height="wrap_content">


                                            <TextView
                                                android:id="@+id/txtdistance"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="@dimen/_10sdp"
                                                android:text="3km away"/>

                                        </LinearLayout>




                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_gravity="center"
                                        android:layout_weight="1.1"
                                        android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/txtprice"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/poppinsmedium"
                                            android:textSize="@dimen/_18sdp"
                                            android:textStyle="bold"
                                            android:textAlignment="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/red"
                                            android:text="₹ 567.00"
                                            android:drawablePadding="@dimen/_7sdp"/>

                                        <TextView
                                            android:id="@+id/txtmincharge"
                                            android:textAlignment="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppinsmedium"
                                            android:text="150.00"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:textStyle="italic"
                                            android:fontFamily="@font/neosanspro_medium"
                                            android:textAlignment="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:text="Know more"
                                            android:textSize="@dimen/_12sdp"
                                            android:drawablePadding="@dimen/_7sdp"/>
                                        <View
                                            android:layout_gravity="center"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:background="@color/blue600"/>

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:padding="@dimen/_10sdp"
                                android:weightSum="3"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">


                                <RadioGroup
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton android:id="@+id/radio_pirates"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:fontFamily="@font/quickstandbold"
                                        android:layout_height="wrap_content"
                                        android:text="@string/immediate" />



                                    <RadioButton android:id="@+id/bookforletter"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/quickstandbold"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Book for Later" />
                                </RadioGroup>

                            </LinearLayout>
                            <LinearLayout
                                android:weightSum="2"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:drawableRight="@drawable/ic_graycheck"
                                    android:windowSoftInputMode="stateAlwaysVisible"
                                    android:overScrollMode="always"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"
                                    android:singleLine="false"
                                    android:isScrollContainer="true"
                                    android:focusable="true"
                                    android:id="@+id/signIn_DATE"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/gray_corner"
                                    android:drawableLeft="@drawable/ic_calenders"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:hint="DD-MM-YY"
                                    android:imeOptions="actionNext"
                                    android:theme="@style/SignInSignUpEditText"
                                    android:textSize="16sp"
                                    android:padding="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec_availibity_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </androidx.recyclerview.widget.RecyclerView>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txtlocation"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:text="Your location"/>

                                <TextView
                                    android:layout_weight="1"
                                    android:windowSoftInputMode="stateAlwaysVisible"
                                    android:overScrollMode="always"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"
                                    android:singleLine="false"
                                    android:isScrollContainer="true"
                                    android:focusable="true"
                                    android:id="@+id/CURRENTLOCATION"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@drawable/gray_corner"
                                    android:drawableLeft="@drawable/ic_location_searching"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:hint="@string/location"
                                    android:imeOptions="actionNext"
                                    android:theme="@style/SignInSignUpEditText"
                                    android:inputType="text"
                                    android:text="Flat No. 417A, Bank Colony, Vijayawada"
                                    android:textSize="12sp"
                                    android:padding="@dimen/_10sdp" />

                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:text="Job Estimate"/>



                                <LinearLayout
                                    android:layout_marginBottom="@dimen/_14sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:weightSum="4"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">


                                    <androidx.cardview.widget.CardView
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardUseCompatPadding="true">


                                        <Spinner
                                            android:id="@+id/spinner"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"

                                            />

                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cd_hour"
                                        app:cardBackgroundColor="@color/yellow"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:id="@+id/txthrs"
                                            android:padding="@dimen/_10sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_14sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:text="Hours"/>

                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cd_days"

                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardUseCompatPadding="true">


                                        <TextView
                                            android:id="@+id/txtdays"
                                            android:padding="@dimen/_10sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_14sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Days"/>


                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cd_weeks"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardUseCompatPadding="true">


                                        <TextView
                                            android:id="@+id/txtweeks"
                                            android:padding="@dimen/_10sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_14sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Weeks"/>

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>


                            </LinearLayout>





                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:text="Work Description"/>






                                <EditText
                                    android:windowSoftInputMode="stateAlwaysVisible"
                                    android:overScrollMode="always"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"
                                    android:isScrollContainer="true"
                                    android:focusable="true"
                                    android:id="@+id/edt_desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_100sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@drawable/gray_corner"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:hint="@string/adddesc"
                                    android:imeOptions="actionNext"
                                    android:theme="@style/SignInSignUpEditText"
                                    android:inputType="text"
                                    android:textSize="16sp"
                                    android:padding="@dimen/_10sdp" />




                                <TextView
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:text="Attachments"/>

                                <LinearLayout
                                    android:layout_marginBottom="@dimen/_20sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/img_add"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:src="@drawable/addimage"
                                        android:layout_margin="@dimen/_10sdp"/>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="@string/cancel"
                    android:layout_height="@dimen/_50sdp"/>
                <Button
                    android:id="@+id/buttonShowDialog"
                    android:background="@color/yellow"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="@string/next"
                    android:layout_height="@dimen/_50sdp"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
