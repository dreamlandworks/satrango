<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vendorprofilebackground"
    tools:context=".VENDOR.PROFILES.VendorProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/onestape"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Get.. Set"
                android:textColor="@color/vendorprimerycolor"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/onestape"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Info...."
                android:textColor="@color/vendorprimerycolor"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:layout_marginTop="@dimen/_140sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/verticalcardview"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:paddingLeft="30dp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:paddingRight="30dp">


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_20sdp"
                                android:id="@+id/signIn_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_vgusers"
                                    android:drawableRight="@drawable/ic_yellowpencil"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:hint="Your Name"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:theme="@style/AppTheme1" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/signIn_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_mob"
                                    android:layout_width="match_parent"
                                    android:theme="@style/AppTheme1"
                                    android:hint="Mobile No"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:maxLength="10"
                                    android:drawableRight="@drawable/ic_yellowpencil"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableLeft="@drawable/ic_vgphoneno"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                             android:visibility="gone"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/signIn_emailid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_email"

                                    android:layout_width="match_parent"
                                    android:theme="@style/AppTheme1"
                                    android:hint="Email Address"
                                    android:inputType="textEmailAddress"
                                    android:drawableRight="@drawable/ic_yellowpencil"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableLeft="@drawable/ic_vgmail"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <TextView

                                android:drawableRight="@drawable/ic_vcalender_icon"
                                android:windowSoftInputMode="stateAlwaysVisible"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:singleLine="false"
                                android:isScrollContainer="true"
                                android:focusable="true"
                                android:id="@+id/txt_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/gray_corner"
                                android:drawableLeft="@drawable/ic_vgcalenders"
                                android:drawablePadding="@dimen/_10sdp"
                                android:hint="DD-MM-YY"
                                android:imeOptions="actionNext"
                                android:theme="@style/SignInSignUpEditText"
                                android:inputType="textEmailAddress"
                                android:textSize="16sp"
                                android:padding="@dimen/_10sdp" />
                            <LinearLayout
                                android:weightSum="3"
                                android:id="@+id/profession"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/gray_corner"
                                android:drawablePadding="@dimen/_10sdp"
                                android:theme="@style/SignInSignUpEditText"
                                android:padding="@dimen/_10sdp"
                                android:orientation="horizontal" >
                                <ImageView
                                    android:layout_gravity="left"
                                    android:layout_weight=".2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_bagicon">
                                </ImageView>

                                <Spinner
                                    android:id="@+id/spin_profession"
                                    android:layout_weight="2.8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_marginRight="@dimen/_20sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gender"/>
<LinearLayout
    android:id="@+id/ll_male"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
      >
    <ImageView
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/male" />


</LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >
                                <ImageView
                                    android:layout_margin="@dimen/_10sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/female" />

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/ll_cross"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >

                                <ImageView
                                    android:layout_margin="@dimen/_10sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/both" />

                                </LinearLayout>



                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_below="@+id/verticalcardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:layout_weight="1"
                            android:id="@+id/btn_cancel"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/greenborderbutton"
                            android:text="Cancel"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/vendorprimerycolor"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp" />


                        <Button
                            android:layout_weight="1"
                            android:id="@+id/btn_next"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/greenbutton"                            android:text="Next"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageView
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_vendorprfileicon" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>



</LinearLayout>