<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Setting.ComplaintFragment">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="left"
            android:src="@drawable/ic_orangebacks" />

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Settings"
            android:textAllCaps="false"
            android:textColor="@color/vendororange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_100sdp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Complaints"
            android:textAllCaps="false"
            android:textColor="@color/vendorprimerycolor"
            android:textSize="18sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_weight="1.1"
            android:src="@drawable/questionmark"
            app:civ_border_color="@color/vendororange"
            app:civ_border_width="@dimen/_2sdp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginRight="@dimen/_100sdp"
            android:background="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Complaints"
            android:textColor="@color/vendorprimerycolor"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="We are sorry and feel regretted for the inconvenience occured. Please let us help you finding a suitable solution"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="My problem is related to"
            android:textColor="@color/red">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:weightSum="1">

            <Button
                android:id="@+id/bookingBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight=".5"
                android:background="@drawable/greenborderbutton"
                android:text="Booking/Bidding"
                android:textAllCaps="false"
                android:textColor="@color/vendorprimerycolor" />

            <Button
                android:id="@+id/fundTransferBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight=".5"
                android:background="@drawable/greenborderbutton"
                android:text="Fund Transfers"
                android:textAllCaps="false"
                android:textColor="@color/vendorprimerycolor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:weightSum="1">

            <Button
                android:id="@+id/bugsBtn"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight=".5"
                android:background="@drawable/greenborderbutton"
                android:text="Bugs in Application"
                android:textAllCaps="false"
                android:textColor="@color/vendorprimerycolor" />

            <Button
                android:id="@+id/userBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight=".5"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/greenborderbutton"
                android:text="User"
                android:textAllCaps="false"
                android:textColor="@color/vendorprimerycolor" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:weightSum="1">


            <Button
                android:id="@+id/othersBtn"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight=".5"
                android:background="@drawable/greenborderbutton"
                android:text="Others"
                android:textAllCaps="false"
                android:textColor="@color/vendorprimerycolor" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight=".5"
                android:background="@color/white"
                android:text="Fund Transfers"
                android:textAllCaps="false"
                android:visibility="gone" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/suggestionbox"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_suggestionmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Write Something..."
            android:gravity="start"
            android:padding="@dimen/_10sdp"
            android:background="@color/transparent"
            android:lines="5"
            android:inputType="textMultiLine"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:weightSum="1">


        <Button
            android:id="@+id/btnbk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight=".5"
            android:background="@drawable/greenborderbutton"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/vendorprimerycolor" />

        <Button
            android:id="@+id/btnsbmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight=".5"
            android:background="@drawable/greenbutton"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>