<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:background="@color/white"
        android:layout_width="match_parent">


        <ImageView
            android:layout_gravity="left"
            android:src="@drawable/ic_orangebacks"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"/>

        <TextView
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/vendororange"
            android:text="View Details" />

        <TextView
            android:layout_marginLeft="@dimen/_100sdp"
            android:id="@+id/textView"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/vendorprimerycolor"
            android:text="Place Bid" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:src="@drawable/questionmark"
            app:civ_border_color="@color/vendororange"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/relativelayout"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginRight="@dimen/_80sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/grey_400"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight=".7"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView

                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/vendorprimerycolor"
                    android:textSize="@dimen/_14sdp"
                    android:text="Description" />

                <TextView
                    android:id="@+id/txtdescrip"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:text="My 120 Excel Files needs to be re-typed." />


            </LinearLayout>


            <LinearLayout
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView

                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/vendorprimerycolor"
                    android:textSize="@dimen/_14sdp"
                    android:text="Average Bid" />


                <TextView
                    android:id="@+id/txtaverage"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:text="₹ 286.00" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey_600"/>


        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight=".7"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView

                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/vendorprimerycolor"
                    android:textSize="@dimen/_14sdp"
                    android:text="Schedule" />

                <TextView
                    android:id="@+id/txtdate"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:text="12 Dec 2020" />

                <TextView
                    android:id="@+id/txttime"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:text=" 09:00 AM to 12:00 PM" />


            </LinearLayout>


            <LinearLayout
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView

                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/vendorprimerycolor"
                    android:textSize="@dimen/_14sdp"
                    android:text="Estimated Time" />

                <TextView
                    android:id="@+id/txtestimatetime"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:text="3 Hrs" />


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_margin="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/vendorprimerycolor"/>

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight=".7"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/vendorprimerycolor"
                    android:text="Your Bid Details" />

                 <LinearLayout
                android:layout_weight=".7"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                     <TextView
                         android:layout_gravity="center"
                         android:fontFamily="@font/quicksand_bold"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAllCaps="false"
                         android:textStyle="bold"
                         android:textSize="14sp"
                         android:text="Bid Amount" />

                     <com.google.android.material.textfield.TextInputLayout
                         android:id="@+id/signIn_username"
                         android:layout_marginTop="@dimen/_10sdp"
                         android:layout_marginLeft="@dimen/_10sdp"

                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                         <com.google.android.material.textfield.TextInputEditText
                           android:id="@+id/edt_bidamount"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:hint="₹"
                             android:inputType="text"
                             android:maxLines="1"
                             android:theme="@style/AppTheme1" />
                     </com.google.android.material.textfield.TextInputLayout>



                 </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:background="@drawable/orangebutton"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Available" />


                <TextView
                    android:id="@+id/txtbidsavailable"
                     android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:text="18/100 Bids" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/_14sdp"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:text="Estimated Time"/>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardUseCompatPadding="true">


                <EditText
                    android:id="@+id/edtestimatetime"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cddays"

                app:cardBackgroundColor="@color/vendorprimerycolor"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/txtday"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Days"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cdhours"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardUseCompatPadding="true">


                <TextView
                    android:id="@+id/txthours"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hours"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Proposal (Why Choose Me?)" />

        <EditText
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:id="@+id/edtvendorproposal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/gray_corner"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Enter Description "
            android:imeOptions="actionNext"
            android:theme="@style/SignInSignUpEditText"
            android:inputType="textMultiLine"
            android:textSize="14sp"
            android:padding="@dimen/_10sdp" />


    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/quicksand_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:text="Attachments (if any)"/>

    <LinearLayout
        android:visibility="gone"

        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/addimage"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                 android:layout_width="match_parent"
                android:id="@+id/list"
                android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/_14sdp"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:text="Submission Type"/>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            android:visibility="invisible"
            app:cardUseCompatPadding="true">


            <TextView
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cdsealed"
            app:cardBackgroundColor="@color/vendorprimerycolor"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/txtsealed"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sealed"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cdopen"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardUseCompatPadding="true">


            <TextView
                android:id="@+id/txtopen"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open"/>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


            <LinearLayout
                android:paddingBottom="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/btncancel"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/greenborderbutton"
                    android:text="Cancel Booking"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/vendorprimerycolor"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp" />


                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnsubmit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/greenbutton"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>

