<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <LinearLayout
            android:paddingTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/greenborderwhitebutton"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:weightSum="2"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:text="Scheduled on :"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/txtsheduleon"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_gravity="right"
                                    android:text="Today"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_call"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_callvendor"/>
                                <ImageView
                                    android:id="@+id/imgchat"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_message"/>

                                <TextView
                                    android:id="@+id/txtamount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:gravity="right"
                                    android:text="₹139.00"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:text="Time :"
                                android:textSize="@dimen/_12sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/txtfromtime"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="right"
                                android:text="09:00 AM "
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txttotime"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="right"
                                android:text="to 12:00 PM"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">



                            <LinearLayout
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imageprofile"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    app:civ_border_width="@dimen/_3sdp"
                                    android:src="@drawable/images"
                                    app:civ_border_color="@color/vendorprimerycolor"/>

                                <TextView
                                     android:id="@+id/txtrating"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.3"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:drawableRight="@drawable/ic_stars"/>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_details"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight=".5"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txtname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:text="Mr. Pablo Escobar"/>

                                <TextView
                                    android:id="@+id/txt_desc"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableRight="@drawable/ic_nexts"
                                    android:layout_gravity="right"
                                    android:text="Being a Blue collar Job this needs to be uniquely coloured so that users can easily understand"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_nexts"/>

                                <TextView
                                    android:id="@+id/txtlocation"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableLeft="@drawable/ic_vendorlocation"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Benz Circle, Vijayawada"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="3"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/upcoming_backg"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtcancelbooking"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:textAlignment="center"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Cancel Booking"/>

                        <TextView
                            android:id="@+id/txtreshedule"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight=".9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Re-schedule"/>


                        <TextView
                            android:id="@+id/txtstart"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1.1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Start"/>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_bidview"
                     android:background="@drawable/greenborderwhitebutton"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:weightSum="2"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:text="Scheduled on :"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/txtsheduleon2"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_gravity="right"
                                    android:text="Today"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_call2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_callvendor"/>
                                <ImageView
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_message"/>

                                <TextView
                                    android:id="@+id/txtamount2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:gravity="right"
                                    android:text="₹139.00"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:text="Time :"
                                android:textSize="@dimen/_12sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/txtfromtime2"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="right"
                                android:text="09:00 AM "
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txttotime2"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="right"
                                android:text="to 12:00 PM"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">



                            <LinearLayout
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imageprofile2"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    app:civ_border_width="@dimen/_3sdp"
                                    android:src="@drawable/images"
                                    app:civ_border_color="@color/vendorprimerycolor"/>

                                <TextView
                                     android:id="@+id/txtrating2"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.3"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:drawableRight="@drawable/ic_stars"/>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_details2"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight=".5"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txtname2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:text="Mr. Pablo Escobar"/>

                                <TextView
                                    android:id="@+id/txt_desc2"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:drawableRight="@drawable/ic_nexts"
                                    android:layout_gravity="right"
                                    android:text="Being a Blue collar Job this needs to be uniquely coloured so that users can easily understand"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_nexts"/>

                                <TextView
                                    android:id="@+id/txtlocation2"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableLeft="@drawable/ic_vendorlocation"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Benz Circle, Vijayawada"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="3"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/upcoming_backg"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtcancelbooking2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:textAlignment="center"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Cancel Booking"/>

                        <TextView
                            android:id="@+id/txtreshedule2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight=".9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Re-schedule"/>


                        <TextView
                            android:id="@+id/txtstart2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1.1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Start"/>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>



    </ScrollView>
</LinearLayout>