<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.satrangolimitless.SignUpActivity">

           <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

              <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

                <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@drawable/loginbackground"/>


                  <TextView
                      android:id="@+id/onestape"
                      android:layout_marginTop="@dimen/_20sdp"
                      android:layout_marginLeft="@dimen/_15sdp"
                      android:layout_width="wrap_content"
                      android:textStyle="bold"
                      android:fontFamily="@font/quicksand_bold"
                      android:textSize="@dimen/_26sdp"
                      android:text="Thanks,"
                      android:textColor="@color/white"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_below="@+id/onestape"
                      android:layout_marginLeft="@dimen/_30sdp"
                      android:layout_width="wrap_content"
                      android:textStyle="bold"
                      android:fontFamily="@font/quicksand_bold"
                      android:textSize="@dimen/_26sdp"
                      android:text="Sign Up !"
                      android:textColor="@color/white"
                      android:layout_height="wrap_content"/>


                <RelativeLayout
                android:layout_marginTop="@dimen/_200sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                    android:id="@+id/verticalcardview"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                            <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_20sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                                <TextView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/circlebackground"
                                android:padding="@dimen/_5sdp"
                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold" />

                                <View
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_gravity="center"
                                android:background="@color/grey_400" />

                                <TextView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/circlebackground"
                                android:padding="@dimen/_5sdp"
                                android:text="2"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold" />

                                <View
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_gravity="center"
                                android:background="@color/grey_400" />

                            <TextView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/inactivebackground"
                                android:padding="@dimen/_5sdp"
                                android:text="3"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold" />

                             </LinearLayout>

                            <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:paddingLeft="30dp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:paddingRight="30dp">


                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:id="@+id/signIn_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edt_name"
                                        android:layout_width="match_parent"
                                        android:theme="@style/AppTheme1"
                                        android:hint="@string/entername"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"

                                        android:drawableRight="@drawable/ic_pencil"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:drawableLeft="@drawable/ic_users"
                                        android:layout_height="wrap_content" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:id="@+id/signIn_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                       android:id="@+id/edt_mob"
                                        android:layout_width="match_parent"
                                        android:theme="@style/AppTheme1"
                                        android:hint="@string/enter_your_mobile_number"
                                        android:inputType="number"
                                        android:maxLines="1"
                                        android:maxLength="10"
                                        android:drawableRight="@drawable/ic_pencil"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:drawableLeft="@drawable/ic_phoneno"
                                        android:layout_height="wrap_content" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:id="@+id/signIn_emailid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                      android:id="@+id/edt_mail"
                                        android:layout_width="match_parent"
                                        android:theme="@style/AppTheme1"
                                        android:hint="@string/email"
                                        android:inputType="textEmailAddress"
                                        android:maxLines="1"
                                        android:drawableRight="@drawable/ic_graycheck"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:drawableLeft="@drawable/ic_mail"
                                        android:layout_height="wrap_content" />
                                </com.google.android.material.textfield.TextInputLayout>



                                <TextView

                                android:drawableRight="@drawable/ic_graycheck"
                                android:windowSoftInputMode="stateAlwaysVisible"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:singleLine="false"
                                android:isScrollContainer="true"
                                android:focusable="true"
                                android:id="@+id/signIn_DOB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/gray_corner"
                                android:drawableLeft="@drawable/ic_calenders"
                                android:drawablePadding="@dimen/_10sdp"
                                android:hint="Date of Birth"
                                android:imeOptions="actionNext"
                                android:theme="@style/SignInSignUpEditText"
                                android:inputType="textEmailAddress"
                                android:textSize="16sp"
                                android:padding="@dimen/_14sdp" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_below="@+id/verticalcardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:gravity="center"
                    android:orientation="horizontal">
                <CheckBox android:id="@+id/checkbox_trmscnd"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_5sdp"
                    style="@style/CustomCheckbox02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
    <TextView
        android:id="@+id/txttermsandcond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheese"
        ></TextView>
</LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/signIn_signUpButton"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button"
                        android:text="@string/button_signUp"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_marginRight="5dp" />

                       </LinearLayout>

                    <LinearLayout
                    android:id="@+id/signIn_signInButton"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:tag="binding_14"
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true">


                        <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have account?"/>

                        <TextView
                        android:id="@+id/sign_ln"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="45.0dip"
                        android:layout_marginStart="6.0dip"
                        android:layout_marginLeft="6.0dip"
                        android:gravity="center_vertical"
                        android:tag="binding_2"
                        android:text="@string/Login"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14.0sp" />

                </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_google_login"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_google_symbol"
                            />
                        <ImageView
                            android:layout_margin="@dimen/_10sdp"
                            android:id="@+id/signIn_facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_facebook"
                            />

                        <ImageView
                            android:visibility="gone"
                            android:layout_margin="@dimen/_10sdp"
                            android:id="@+id/signIn_twiter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_twitter"
                            />
                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/loginButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/_30sdp"
                      android:layout_marginTop="@dimen/_120sdp"
                      android:gravity="center">

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_margin="@dimen/_20sdp"
                          android:src="@drawable/signupicon" />

                  </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>