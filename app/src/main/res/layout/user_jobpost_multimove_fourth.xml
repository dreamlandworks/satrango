<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_gravity="left"
            android:src="@drawable/ic_backs"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"/>

        <TextView
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="back" />

        <TextView
            android:layout_marginLeft="@dimen/_100sdp"
            android:id="@+id/textView"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Cancel Booking" />

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_weight="1.1"
            android:layout_gravity="right"
            android:src="@drawable/userquestionmark"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_yellowline"/>

    <ScrollView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  <ImageView
                  android:layout_gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:adjustViewBounds="true"
                  android:src="@drawable/loginbackground"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@color/colorPrimaryDark"/>


            <TextView
                android:id="@+id/onestape"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Post your Job"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/circlebackground"
                    android:padding="@dimen/_5sdp"
                    android:text="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:background="@color/grey_400" />

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/circlebackground"
                    android:padding="@dimen/_5sdp"
                    android:text="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:background="@color/grey_400" />

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/circlebackground"
                    android:padding="@dimen/_5sdp"
                    android:text="3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />


            </LinearLayout>




            <RelativeLayout
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/verticalcardview"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="@dimen/_50sdp"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="Languages preference (optional)"/>

                            <Spinner
                                android:id="@+id/spin_language"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:drawableRight="@drawable/ic_baseline_expand"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:background="@drawable/gray_corner"
                                android:drawablePadding="@dimen/_10sdp"
                                android:theme="@style/SignInSignUpEditText"
                                android:padding="@dimen/_10sdp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:text="Keywords/ Skills needed"/>

                            <AutoCompleteTextView
                                android:layout_margin="10dp"
                                android:id="@+id/searchview"
                                android:background="@drawable/gray_corner"
                                android:layout_width="match_parent"
                                android:hint="Add Skills"
                                android:paddingLeft="@dimen/_5sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:tooltipText="Add skills"/>


                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:id="@+id/medicine_recycler"
                                android:layout_height="wrap_content"/>



                            <TextView
                                android:drawablePadding="@dimen/_10sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:text="ype of Vehicle Needed"/>

                                <LinearLayout
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                    android:weightSum="4"
                                    >

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cdmotor"
                                         android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_7sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Motor Cycle"/>

                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cdcar"

                                         android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_7sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Car"/>

                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
android:id="@+id/cdauto"
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_7sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Auto"/>

                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
android:id="@+id/cdbus"
                                         android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_7sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Bus"/>

                                    </androidx.cardview.widget.CardView>

                            </LinearLayout>
                                <LinearLayout
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                    android:weightSum="4"
                                    >

                                    <androidx.cardview.widget.CardView
android:id="@+id/cdvan"
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_7sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Van"/>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                    android:id="@+id/cdtruck"
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_7sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Truck"/>

                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
android:id="@+id/cdcarier"
                                         android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_7sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Carrier"/>

                                    </androidx.cardview.widget.CardView>
                                    <androidx.cardview.widget.CardView
android:id="@+id/cdothers"
                                         android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardCornerRadius="@dimen/_7sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:padding="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Others"/>

                                    </androidx.cardview.widget.CardView>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView

                                    android:id="@+id/img_add"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/addimage"
                                    android:layout_margin="@dimen/_10sdp"/>

                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:id="@+id/list"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_below="@+id/verticalcardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:background="@drawable/gray_corner"
                            android:layout_weight="1"
                            android:id="@+id/Vcancel"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:text="Cancel"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp" />


                        <Button
                            android:layout_weight="1"
                            android:id="@+id/btnnextt"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/button"                            android:text="Next"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageView
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="114dp"
                    android:src="@drawable/ic_singlemove3" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>