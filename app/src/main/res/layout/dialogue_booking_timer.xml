<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80444444"
 android:gravity="center"
    >


    <LinearLayout
        android:gravity="center"
        android:background="@drawable/rounded_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp"
        >

        <ImageView
            android:visibility="invisible"
            android:layout_gravity="right"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_clear" />

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please wait.."
            android:textSize="@dimen/_16sdp"
            android:layout_margin="@dimen/_20sdp"
            android:fontFamily="@font/neosans_pro_regular"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ProgressBar
        android:id="@+id/view_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"

        android:progressDrawable="@drawable/drawable_circularprogressbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_timer"
        android:layout_gravity="center"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/neosans_pro_regular"
        />



</FrameLayout>

        <TextView
            android:textStyle="bold"

            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:textAlignment="center"
            android:text="While we process your proposal with the service provider"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    </LinearLayout>
 </LinearLayout>