<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/loginbackground"
                />

            <TextView
                android:id="@+id/onestape"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Add New Bank"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/onestape"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Account!"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>




            <RelativeLayout
                android:layout_marginTop="@dimen/_230sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="gone"
                            android:textAlignment="center"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Welcome to SATRANGO, Have a nice day with SATRANGO"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="32dp"
                            android:orientation="vertical"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/signIn_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_name"
                                    android:layout_width="match_parent"
                                    android:theme="@style/AppTheme1"
                                    android:hint="Account Holder Name"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:maxLength="10"
                                    android:imeOptions="actionNext"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableLeft="@drawable/ic_users"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtaccno"
                                    android:layout_width="match_parent"
                                    android:theme="@style/AppTheme1"
                                    android:hint="Account No."
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:maxLength="18"
                                    android:imeOptions="actionNext"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableLeft="@drawable/bank"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtcnfaccno"
                                    android:layout_width="match_parent"
                                    android:theme="@style/AppTheme1"
                                    android:hint="Confirm Account No."
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:maxLength="18"
                                    android:imeOptions="actionNext"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableLeft="@drawable/lock"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtifsc"
                                    android:layout_width="match_parent"
                                    android:theme="@style/AppTheme1"
                                    android:hint="IFSC Code"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:maxLength="11"
                                    android:imeOptions="actionNext"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableLeft="@drawable/ifsc"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="62dp"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/bnsubmit"
                                    android:layout_width="@dimen/_250sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/button"
                                    android:text="Submit"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_120sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/loginicon"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>