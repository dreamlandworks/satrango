<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_discussvendor"
            android:background="@drawable/greenborderwhitebutton"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="2"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txtestimatetime"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="right"
                        android:textSize="@dimen/_12sdp"
                        android:layout_gravity="right"
                        android:text="12 dec 2021 at 09:45 Pm"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>




                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_weight="1.6"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            app:civ_border_width="@dimen/_3sdp"
                            android:src="@drawable/images"
                            app:civ_border_color="@color/yellow"/>

                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.3"
                            android:textAlignment="center"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:drawableRight="@drawable/ic_stars"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/InprogressBooKingDetails"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight=".4"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:weightSum="2"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <TextView
                                android:id="@+id/txtvname"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="Mr. Pablo Escobar"/>



                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtproposal"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_gravity="right"
                            android:text="Being a Blue collar Job this needs to be uniquely coloured so that users can easily understand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_nexts"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>