<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".WelcomeonboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@drawable/loginbackground" />



            <TextView
                android:id="@+id/onestape"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Welcome,"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/onestape"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Sign Up !"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>



            <RelativeLayout
                android:layout_marginTop="@dimen/_220sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviews"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="gone"
                            android:textAlignment="center"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Welcome to SATRANGO, Have a nice day with SATRANGO"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_20sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_20sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/circlebackground"
                                android:padding="@dimen/_5sdp"
                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_gravity="center"
                                android:background="@color/grey_400" />

                                <TextView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/inactivebackground"
                                android:padding="@dimen/_5sdp"
                                android:text="2"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold" />

                                <View
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_gravity="center"
                                android:background="@color/grey_400" />


                                <TextView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/inactivebackground"
                                android:padding="@dimen/_5sdp"
                                android:text="3"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="32dp"
                            android:orientation="vertical"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue"
                                android:textAlignment="center"
                                android:textSize="@dimen/_30sdp"
                                android:fontFamily="@font/neosans_pro_regular"
                                android:textStyle="italic|bold"
                                android:text="Welcome on Board"/>

                            <TextView
                                android:id="@+id/txt_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:textSize="@dimen/_30sdp"
                                android:layout_margin="@dimen/_15sdp"
                                android:fontFamily="@font/neosans_pro_regular"
                                android:textStyle="bold"
                                android:text="John Deo"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_15sdp">

                             <TextView
                                 android:id="@+id/txt_adres"
                                 android:padding="@dimen/_10sdp"
                                 android:drawableLeft="@drawable/ic_location"
                                 android:drawablePadding="@dimen/_10sdp"
                                 android:text="@string/address"
                                 android:textColor="@color/colorPrimary"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"/>
                                </androidx.cardview.widget.CardView>


                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:text="@string/thanksmessage"
                                    android:textColor="@color/red"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>




                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_below="@+id/cardviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/signUp_WElcomeboard"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button"
                        android:text="@string/next"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"

                        android:layout_marginRight="5dp" />



                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_80sdp"
                android:gravity="center">

                    <ImageView
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_margin="@dimen/_20sdp"
                    android:src="@drawable/welcomeboardicon" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>