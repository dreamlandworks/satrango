<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SetPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/loginbackground"
                />


            <TextView
                android:id="@+id/onestape"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Hello There,"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/onestape"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Change Password !"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>





            <RelativeLayout
                android:layout_marginTop="@dimen/_230sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="gone"
                            android:textAlignment="center"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Welcome to SATRANGO, Have a nice day with SATRANGO"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="32dp"
                            android:orientation="vertical"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp">

                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/circlebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_gravity="center"
                                    android:background="@color/grey_400" />

                                <TextView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/circlebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="2"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_gravity="center"
                                    android:background="@color/grey_400" />


                                <TextView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/circlebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="3"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>



                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/signIn_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:theme="@style/AppTheme1"
                                    android:inputType="textPassword"
                                    android:drawableLeft="@drawable/ic_inepasswords"
                                    android:drawableRight="@drawable/ic_graycheck"
                                    android:id="@+id/edt_pass"
                                    android:maxLines="1"
                                    android:hint="Old Password"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/signIn_cpassword"                                    android:maxLines="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:theme="@style/AppTheme1"
                                    android:inputType="textPassword"
                                    android:hint="New Password"
                                    android:drawableLeft="@drawable/ic_passwords"
                                    android:drawableRight="@drawable/ic_graycheck"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:id="@+id/edt_cnfpass"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_40sdp"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_resetpass"
                                    android:layout_width="@dimen/_250sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:background="@drawable/button"
                                    android:text="Submit"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />



                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_110sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/passwordicon"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>