<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:background="@color/white"
        android:layout_width="match_parent">



        <ImageView
            android:layout_gravity="left"
            android:src="@drawable/ic_orangebacks"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"/>

        <TextView
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/vendororange"
            android:text="My Bid" />

        <TextView
            android:layout_marginLeft="@dimen/_100sdp"
            android:id="@+id/textView"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/vendorprimerycolor"
            android:text="Job Details" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:src="@drawable/questionmark"
            app:civ_border_color="@color/vendororange"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/relativelayout"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginRight="@dimen/_80sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/grey_400"/>







    <ScrollView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView

                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/vendororange"
                        android:textSize="@dimen/_14sdp"
                        android:text="Description" />

                    <TextView

                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView

                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:textColor="@color/vendororange"
                        android:textSize="@dimen/_14sdp"
                        android:text="Average Bid" />


                    <TextView
                        android:id="@+id/txtmin_maxrange"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:text="â‚¹ 286.00 - 500" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey_600"/>




            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_1sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        >




                    </View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/vendorprimerycolor"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14sdp"
                                android:text="Job Details"/>

                            <TextView
                                android:id="@+id/txtdesxc"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:text="My 120 Excel Files needs to be re-typed."/>



                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/grey_600"/>


                        <LinearLayout
                            android:layout_margin="@dimen/_10sdp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView

                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textColor="@color/vendorprimerycolor"
                                    android:textSize="@dimen/_14sdp"
                                    android:text="Schedule" />

                                <TextView
                                    android:id="@+id/txtdate"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="12sp"
                                    android:text="12 Dec 2020" />

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/txtfrmtime_totime"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="12sp"
                                    android:text=" 09:00 AM to 12:00 PM" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView

                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textColor="@color/vendorprimerycolor"
                                    android:textSize="@dimen/_14sdp"
                                    android:text="Estimated Time" />

                                <TextView
                                    android:id="@+id/txtestimatetime"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="12sp"
                                    android:text="3 Hrs" />


                            </LinearLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/grey_600"/>

                        <LinearLayout
                            android:layout_margin="@dimen/_10sdp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:textColor="@color/vendorprimerycolor"
                                    android:text="Languages preferred" />


                                <TextView
                                    android:id="@+id/txtlanguages"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_60"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="12sp"
                                    android:text="English, Hindi, Telugu" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:textColor="@color/vendorprimerycolor"
                                    android:text="Attachments" />

                                <LinearLayout
                                    android:layout_margin="@dimen/_10sdp"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recv_placebidatachm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/grey_600"/>

                        <LinearLayout
                            android:layout_margin="@dimen/_10sdp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:textColor="@color/vendorprimerycolor"
                                    android:text="Bids received" />


                                <TextView
                                    android:id="@+id/txtbidsrecieved"
                                    android:layout_marginLeft="@dimen/_30sdp"
                                    android:layout_weight="1"
                                    android:textColor="@color/red"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="12sp"
                                    android:text="28" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:textColor="@color/vendorprimerycolor"
                                    android:text="Bids received" />


                                <TextView
                                    android:id="@+id/txtavg"
                                    android:layout_marginLeft="@dimen/_30sdp"
                                    android:layout_weight="1"
                                    android:textColor="@color/red"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="12sp"
                                    android:text="â‚¹ 286.00" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_marginTop="@dimen/_70sdp"
                    android:background="@drawable/layout_completedbackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Awarded to You"/>


                        <LinearLayout
                            android:layout_marginTop="@dimen/_30sdp"
                            android:background="@drawable/greenborderwhitebutton"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:padding="@dimen/_10sdp"
                                android:weightSum="2"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">


                                <LinearLayout
                                    android:id="@+id/ll_details"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">



                                    <LinearLayout
                                        android:id="@+id/InprogressBooKingDetails"
                                        android:layout_weight=".5"
                                        android:layout_width="match_parent"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">


                                        <TextView
                                            android:id="@+id/txtproposal"
                                            android:layout_marginBottom="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_gravity="right"
                                            android:textSize="@dimen/_12sdp"
                                            android:textColor="@color/vendorprimerycolor"
                                            android:text="I am experienced professional with 8 years of expertise which can best serve your need."
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:paddingBottom="@dimen/_5sdp"
                                android:weightSum="2"
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_weight="1.1"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:text="Bid Amount"/>
                                    <TextView
                                        android:id="@+id/txtbidamount"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/vendorprimerycolor"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:text="â‚¹456.00"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:text="Estimated Time"/>
                                    <TextView
                                        android:id="@+id/txtuseresttime"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/vendorprimerycolor"
                                        android:textSize="@dimen/_14sdp"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:text="2 days"/>

                                </LinearLayout>



                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:src="@drawable/awardedimage"/>

                    <TextView
                        android:gravity="right"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="View in My Bookings "/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>