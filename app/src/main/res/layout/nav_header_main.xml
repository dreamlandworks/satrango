<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/sidebackgroundimage"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/myprofile"
    android:weightSum="2"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/_2sdp"
        android:src="@drawable/images"/>

    <LinearLayout
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:fontFamily="@font/neosans_pro_regular"
        android:id="@+id/draweruname"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:text="John Deo"
        android:textAlignment="center"
        android:textSize="@dimen/_18sdp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wallets"/>

            <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.0.00"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/yellow"/>

        </LinearLayout>


          <LinearLayout
              android:layout_marginTop="@dimen/_3sdp"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_marginBottom="@dimen/_25sdp"
              android:weightSum="2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <LinearLayout
                android:background="@drawable/yellowsbutton"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <ImageView
                    android:padding="@dimen/_3sdp"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/userimage"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_provider"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROVIDER"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"/>

            </LinearLayout>
          
            </LinearLayout>

            </LinearLayout>


</LinearLayout>