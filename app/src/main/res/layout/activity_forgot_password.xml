<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ForgotPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/loginbackground"
                />


            <TextView
                android:id="@+id/onestape"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Hi,"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/onestape"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Reset Password !"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>





            <RelativeLayout
                android:layout_marginTop="@dimen/_230sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="gone"
                            android:textAlignment="center"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Welcome to SATRANGO, Have a nice day with SATRANGO"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="32dp"
                            android:orientation="vertical"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp">



                            <TextView
                                android:layout_marginTop="@dimen/_30sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/passwordhint"/>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/signIn_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_30sdp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:id="@+id/edt_phone"
                                    android:theme="@style/AppTheme1"
                                    android:hint="@string/enter_your_mobile_number"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableLeft="@drawable/ic_phone"
                                    android:drawableRight="@drawable/ic_graycheck"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_40sdp"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                        android:id="@+id/btn_resetpass"
                                    android:layout_width="@dimen/_250sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/button"
                                    android:text="Reset Password"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:layout_marginRight="5dp" />



                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_110sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/passwordicon"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>