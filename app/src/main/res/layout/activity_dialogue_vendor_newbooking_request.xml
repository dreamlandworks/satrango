<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80444444"
    android:gravity="center"
    >


    <LinearLayout
        android:gravity="center"
        android:background="@drawable/acceptbookingbackghround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp"
        >

        <ImageView
            android:layout_gravity="right"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_clear" />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Booking request"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/vendorprimerycolor"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center" />

        <View
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/vendorprimerycolor"/>
        <TextView
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textColor="@color/vendororange"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/txtdattime"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center" />
        <TextView
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/vendororange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center" />
        <TextView

            android:textSize="@dimen/_12sdp"
            android:textColor="@color/grey_60"
            android:id="@+id/txtlocation"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center" />
        <TextView
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work"
            android:textColor="@color/vendororange"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center" />

        <TextView
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/txtbookdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ProgressBar
                android:id="@+id/view_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/drawable_circularprogressbar_green_vendor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_timer"
                android:layout_gravity="center"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/neosans_pro_regular"
                />



        </FrameLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_20sdp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_reject"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/greenborderbutton"
                android:text="@string/reject"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/vendorprimerycolor"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp" />


            <Button
                android:layout_weight="1"
                android:id="@+id/btn_accept"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/greenbutton"
                android:text="@string/accept"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>