<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:background="@color/white"
        android:layout_width="match_parent">


        <ImageView
            android:layout_gravity="left"
            android:src="@drawable/ic_orangebacks"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"/>

        <TextView
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/vendororange"
            android:text="View Details" />

        <TextView
            android:layout_marginLeft="@dimen/_100sdp"
            android:id="@+id/textView"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/vendorprimerycolor"
            android:text="Reshedule" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:src="@drawable/questionmark"
            app:civ_border_color="@color/vendororange"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginRight="@dimen/_80sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/grey_400"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="@color/vendororange"
                        android:text="Booking ID:" />

                    <TextView
                        android:id="@+id/txtbookingid"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="2020121154" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="@color/vendororange"
                        android:text="Date:" />

                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="21 Dec 2020" />
                </LinearLayout>

            </LinearLayout>




            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#F1FAEE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="@dimen/_3sdp">
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/vendorprimerycolor"/>
                    <LinearLayout
                        android:weightSum="3"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:padding="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="right"
                            android:src="@drawable/usernew"
                            app:civ_border_color="@color/vendororange"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"/>

                        <LinearLayout
                            android:padding="@dimen/_5sdp"
                            android:layout_weight=".8"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">



                            <TextView
                                android:id="@+id/txtname"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:fontFamily="@font/poppinsmedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:text="John Doe" />

                            <TextView
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:textColor="@color/vendorprimerycolor"
                                android:text="User" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtrating"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableRight="@drawable/ic_stars"
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textSize="10sp"
                                android:textColor="@color/vendorprimerycolor"
                                android:text="4.5" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:background="@color/vendorprimerycolor"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:text="Amt Due" />

                            <TextView
                                android:id="@+id/txtamount"
                                android:gravity="right"
                                android:textSize="@dimen/_18sdp"
                                android:layout_gravity="center"
                                android:text="₹139.00"
                                android:fontFamily="@font/quicksand_bold"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/vendorprimerycolor"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@color/vendorprimerycolor"
                    android:text="Scheduled On" />

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtsheduledate"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_calendersorange"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:text="12 Dec 2020" />


                    <TextView
                        android:id="@+id/txtfrmtotime"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_darktimer"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:text="06:00 AM to 09:00 AM" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="@color/vendorprimerycolor"
                        android:text="Reschedule" />


                    <Button
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/greenbutton"
                        android:text="Now"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:padding="@dimen/_5sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/group"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:id="@+id/signIn_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                   android:id="@+id/txtdatepick"
                                android:drawableRight="@drawable/ic_graycheck"
                                android:drawableLeft="@drawable/ic_calendersorange"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:drawablePadding="@dimen/_10sdp"
                                android:hint="Date"
                                 android:inputType="text"
                                android:fontFamily="@font/quicksand_bold"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:maxLines="1"
                                android:theme="@style/AppTheme1" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="@dimen/_15sdp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <!--<com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:id="@+id/VSFROM"
                            android:background="@drawable/frombackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <TextView
                                android:layout_marginTop="@dimen/_15sdp"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_darktimer"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:drawablePadding="@dimen/_10sdp"
                                android:text="7:00 AM"
                                android:inputType="text"
                                android:fontFamily="@font/quicksand_bold"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:maxLines="1"
                                android:theme="@style/AppTheme1" />
                        </com.google.android.material.textfield.TextInputLayout>
-->

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:id="@+id/VSTO"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:theme="@style/AppTheme1"
                                android:id="@+id/txttotime"
                                android:hint="To"
                                 android:drawableLeft="@drawable/ic_darktimer"
                                android:inputType="text"
                                android:fontFamily="@font/quicksand_bold"
                                android:textSize="@dimen/_14sdp"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:drawablePadding="@dimen/_10sdp"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtfromtime"

                                android:layout_width="match_parent"
                                android:theme="@style/AppTheme1"
                                android:hint="From"
                                 android:drawableLeft="@drawable/ic_darktimer"
                                android:inputType="text"
                                android:fontFamily="@font/quicksand_bold"
                                android:textSize="@dimen/_14sdp"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:drawablePadding="@dimen/_10sdp"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/Vcancel"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/greenborderbutton"
                    android:text="Cancel Booking"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/vendorprimerycolor"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp" />


                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/greenbutton"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>