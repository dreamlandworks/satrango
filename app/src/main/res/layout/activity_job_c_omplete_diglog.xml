<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.satrangolimitless.OtpverificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/loginbackground"/>


                <TextView
                    android:id="@+id/onestape"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_26sdp"
                    android:text="Enter OTP"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@+id/onestape"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_26sdp"
                    android:text="to go.."
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>


                <RelativeLayout
                    android:layout_marginTop="@dimen/_200sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_20sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_marginTop="@dimen/_50sdp"
                            android:padding="@dimen/_30sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_field"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Enter OTP"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_30sdp"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:textStyle="bold" />

                                <TextView
                                    android:textSize="@dimen/_16sdp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text="Please type the otp recieved from Service Provider to mark this booking completed"
                                    android:textColor="@color/black"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/layout_otp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/layout_header"
                                android:orientation="horizontal">

                                <EditText
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:id="@+id/edt_one"
                                    android:layout_width="@dimen/_50sdp"
                                    android:textColor="@color/black"
                                    android:layout_height="@dimen/_50sdp"
                                    android:inputType="numberPassword"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@drawable/pricebackground"
                                    android:maxLength="1" />

                                <EditText
                                    android:textColor="@color/black"
                                    android:id="@+id/edt_two"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:inputType="numberPassword"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@drawable/pricebackground"
                                    android:maxLength="1"/>

                                <EditText
                                    android:textColor="@color/black"
                                    android:id="@+id/edt_three"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:inputType="numberPassword"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:background="@drawable/pricebackground"
                                    android:maxLength="1"/>

                                <EditText
                                    android:textColor="@color/black"
                                    android:id="@+id/edt_four"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:inputType="numberPassword"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/pricebackground"
                                    android:maxLength="1"/>

                                <requestFocus />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:visibility="invisible"
                                    android:gravity="center"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="Didn't Receive the OTP?"
                                    android:textColor="@color/grey_60"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                                <TextView
                                    android:visibility="invisible"
                                    android:id="@+id/txt_resend"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Resend Code"
                                    android:textColor="@color/colorPrimary"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnverify"
                                    android:layout_width="@dimen/_250sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/button"
                                    android:text="Submit"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:layout_marginRight="5dp" />
                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_110sdp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_20sdp"
                        android:src="@drawable/otpimage" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>