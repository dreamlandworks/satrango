<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner"
    android:gravity="center"
    >


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        >

        <ImageView
            android:layout_gravity="right"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_clear" />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reasons for rejection"
            android:textColor="@color/red"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center" />

        <View
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/vendorprimerycolor"/>

        <TextView
            android:layout_margin="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looks like you are facing some difficulties. Please let us help you next time"
            android:textColor="@color/vendororange"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="center" />
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This booking is rejected because"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/quicksand_bold"/>


        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button

                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/btn_locationfar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/greenborderbutton"
                android:text="Location too far"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/vendorprimerycolor"
                android:textSize="@dimen/_12sdp" />


            <Button
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/btn_notinterested"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/greenborderbutton"
                android:text="Not Interested"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/vendorprimerycolor"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnnotavailtime"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/greenborderbutton"
                android:text="Not Available at that time"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/vendorprimerycolor"
                android:textSize="@dimen/_12sdp" />


            <Button
                android:id="@+id/btnskilnotmatch"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/greenborderbutton"
                android:text="My Skillset is not matching"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/vendorprimerycolor"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Others please specify"
            android:textColor="@color/vendorprimerycolor"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/quicksand_bold"/>

        <EditText
            android:id="@+id/edt_reason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:inputType="text"
            android:background="@drawable/greenborderbutton"/>

        <Button
            android:id="@+id/btn_submit"
           android:layout_margin="@dimen/_40sdp"
            android:layout_weight="1"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/greenbutton"
            android:text="Submit"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>

</LinearLayout>