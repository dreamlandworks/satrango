<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent">


        <ImageView
            android:id="@+id/ivbak"
            android:layout_gravity="left"
            android:src="@drawable/ic_backs"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"/>

        <TextView

            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="My Bookings" />

        <TextView
            android:layout_marginLeft="@dimen/_100sdp"
            android:id="@+id/textView"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="View Details" />

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_weight="1.1"
            android:layout_gravity="right"
            android:src="@drawable/userquestionmark"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_yellowline"/>

    <ScrollView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="-5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@color/colorPrimaryDark"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView

                                android:layout_marginLeft="@dimen/_30sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:text="Booking ID:" />

                            <TextView
                                android:id="@+id/txtbookingidl"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:textColor="@color/vendororange"
                                android:text="2020121154" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:text="Date:" />

                            <TextView
                                android:id="@+id/txtdatename"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:textColor="@color/vendororange"
                                android:text="21 Dec 2020" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:background="@color/colorPrimaryDark"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight=".8"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="@font/quickstandbold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/_16sdp"
                                android:text="Complete your Booking"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/circlebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_gravity="center"
                                    android:background="@color/grey_400" />

                                <TextView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/inactivebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="2"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_gravity="center"
                                    android:background="@color/grey_400" />

                                <TextView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/inactivebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="3"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



                <View
                    android:layout_marginTop="@dimen/_200sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/colorPrimaryDark"/>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1.2"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imgone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/images"
                                    app:civ_border_color="@color/colorPrimaryDark"
                                    app:civ_border_width="@dimen/_2sdp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight=".7"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_weight=".7"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/txtusername"
                                        android:fontFamily="@font/poppinsmedium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_18sdp"
                                        android:text="John Doe"/>


                                    <TextView
                                        android:id="@+id/txtrating"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:drawableRight="@drawable/ic_stars"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_14sdp"
                                        android:text="4.4"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_weight=".7"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_14sdp"
                                        android:text="AC Mechanic"/>




                                </LinearLayout>




                            </LinearLayout>

                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_weight="1.1"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txtprice"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:textSize="@dimen/_18sdp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/red"
                                    android:text="₹ 567.00"
                                    android:drawablePadding="@dimen/_7sdp"/>



                            </LinearLayout>


                        </LinearLayout>



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardUseCompatPadding="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_1sdp"
                            app:cardElevation="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/white">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                              >

                            </View>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:background="@drawable/ic_otpbackground"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_height="@dimen/_60sdp">

                                    <LinearLayout
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:paddingLeft="@dimen/_10sdp"
                                        android:weightSum="2"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_weight=".5"
                                            android:layout_margin="@dimen/_10sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_14sdp"
                                            android:text="Scheduled On"/>

                                        <LinearLayout
                                            android:layout_weight="1.5"
                                            android:layout_width="match_parent"
                                            android:orientation="vertical"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:gravity="center"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/quicksand_bold"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textAllCaps="false"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/_14sdp"
                                                android:textColor="@color/white"
                                                android:text="OTP" />

                                            <TextView
                                                android:id="@+id/txttotp"
                                                android:gravity="right"
                                                android:textSize="@dimen/_18sdp"
                                                android:layout_gravity="center"
                                                android:text="2531"
                                                android:fontFamily="@font/quicksand_bold"
                                                android:textStyle="bold"
                                                android:textColor="@color/white"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_margin="@dimen/_10sdp"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/txtdatet"
                                        android:layout_weight="1"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:drawableLeft="@drawable/ic_calenders"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAllCaps="false"
                                        android:textSize="12sp"
                                        android:text="12 Dec 2020" />


                                    <TextView
                                        android:id="@+id/txtfrmtotime"
                                        android:layout_weight="1"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAllCaps="false"
                                        android:textSize="12sp"
                                        android:text="06:00 AM to 09:00 AM" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_margin="@dimen/_10sdp"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:fontFamily="@font/quicksand_bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAllCaps="false"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:text="Work Description" />


                                    <TextView
                                        android:id="@+id/txtdescr"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_weight="1"
                                        android:textColor="@color/grey_60"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAllCaps="false"
                                        android:textSize="12sp"
                                        android:text="The quick, brown fox jumps over a lazy dog. DJs flock by when MTV ax quiz prog. Junk MTV quiz graced by fox whelps. Bawds jog, flick quartz, vex nymphs." />

                                </LinearLayout>

                                <TextView
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="Attachments" />

                                <LinearLayout
                                    android:layout_margin="@dimen/_10sdp"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

  <androidx.recyclerview.widget.RecyclerView
android:id="@+id/revatachpendingdetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btncancel"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="Cancel Booking"
                    android:layout_height="@dimen/_50sdp"/>
                <Button
                    android:id="@+id/btnreshedule"
                    android:background="@color/yellow"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="Re-Schedule"
                    android:layout_height="@dimen/_50sdp"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>