<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgprof"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/images"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="@dimen/_2sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight=".8"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtname"
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:text="Mr. Srikanth"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight=".7"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:text="Overall Rating"/>


                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/txtrating"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableRight="@drawable/ic_stars"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/vendorprimerycolor"
                        android:text="4.5" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight=".9"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtbookingid"
                    android:gravity="right"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/vendorprimerycolor"
                    android:textSize="@dimen/_12sdp"
                    android:text="Booking ID: 20201585" />
                <TextView
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/txtestmtime"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                      />


            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/txtdescrip"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="I Have booked his service, he is arrogant and not responded properly. However, the task was completed in much difficulty" />
        <LinearLayout
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight=".87"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="@color/vendororange"
                    android:text="Professionalism" />


                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/txtprofratings"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableRight="@drawable/ic_stars"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="@color/vendorprimerycolor"
                    android:text="4.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@color/vendororange"
                    android:text="Behaviour" />


                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/txtbhvrratings"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableRight="@drawable/ic_stars"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="@color/vendorprimerycolor"
                    android:text="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.13"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView

                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@color/vendororange"
                    android:text="Skills" />


                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/txtskilrating"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableRight="@drawable/ic_stars"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="@color/vendorprimerycolor"
                    android:text="5" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/vendorprimerycolor"/>

</LinearLayout>