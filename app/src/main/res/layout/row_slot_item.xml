<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/avabilitybackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_remove"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:src="@drawable/ic_expend"/>



        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:id="@+id/VSFROM"
                android:background="@drawable/fromtimebg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <TextView
                    android:id="@+id/txt_from"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:drawableLeft="@drawable/ic_timer"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:inputType="text"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:theme="@style/AppTheme1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/VSto"
                android:background="@drawable/totimebg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <TextView
                    android:id="@+id/txt_to"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:drawableLeft="@drawable/ic_timer"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:inputType="text"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:theme="@style/AppTheme1" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:weightSum="3"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/btn_everyday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/greenborderbutton"
                android:text="Everyday"
                android:textColor="@color/vendorprimerycolor"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_12sdp" />


            <Button
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/btn_weekday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/greenborderbutton"
                android:text="Week-days"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/vendorprimerycolor"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/btn_wekend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/greenborderbutton"
                android:text="Week-ends"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/vendorprimerycolor"
                android:textSize="@dimen/_12sdp" />

<EditText
    android:visibility="gone"
    android:id="@+id/edtvalue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></EditText>
        </LinearLayout>



        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"/>


        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recydays"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</androidx.recyclerview.widget.RecyclerView>







        </LinearLayout>




    </LinearLayout>

</LinearLayout>