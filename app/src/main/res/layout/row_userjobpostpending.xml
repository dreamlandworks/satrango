<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
         android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/colorPrimaryDark"
            android:text="This Week" />



    </LinearLayout>

    <RelativeLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/greenborderwhitebutton"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="2"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtminrange"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:gravity="right"
                            android:textSize="@dimen/_14sdp"
                            android:layout_gravity="right"
                            android:text="₹250.00 -"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtmaxrange"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:gravity="right"
                            android:textSize="@dimen/_14sdp"
                            android:layout_gravity="right"
                            android:text="500.00"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_details"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:id="@+id/InprogressBooKingDetails"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@id/txtdesc"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableRight="@drawable/ic_nexts"
                            android:layout_gravity="right"
                            android:text="Being a Blue collar Job this needs to be uniquely coloured so that users can easily understand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_nexts"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingBottom="@dimen/_20sdp"
                android:weightSum="4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/ic_bookingpending_svg"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1.1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Bids"/>
                    <TextView
                        android:id="@+id/txtbids"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Average"/>
                    <TextView
                        android:id="@+id/txtaverage"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="₹456.00"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chatnew"/>

                </LinearLayout>

                 <LinearLayout
                     android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Expires in"/>
                     <TextView
                         android:id="@+id/txtexpires"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textColor="@color/yellow"
                         android:textSize="@dimen/_14sdp"
                         android:gravity="center"
                         android:fontFamily="@font/quicksand_bold"
                         android:text="3 Days 4 Hrs"/>

                 </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
</LinearLayout>