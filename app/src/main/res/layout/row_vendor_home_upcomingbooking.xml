<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >



    <RelativeLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="@dimen/_300sdp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/mybookingfrist"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@color/vendorprimerycolor"
                            android:text="Scheduled in :"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:layout_gravity="right"
                            android:text="2 days 2hr"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_callvendor"/>
                        <ImageView
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_message"/>

                        <TextView
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="right"
                            android:textSize="@dimen/_14sdp"
                            android:layout_gravity="right"
                            android:text="â‚¹139.00"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/vendorprimerycolor"
                        android:text="Scheduled in :"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableLeft="@drawable/ic_vendorlocation"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:text="Location :"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                        <TextView
                            android:textSize="@dimen/_12sdp"
                            android:maxLines="3"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawableRight="@drawable/ic_nexts"
                            android:layout_gravity="right"
                            android:text="Being a Blue collar Job this needs to be uniquely coloured so that users can easily understand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_nexts"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/upcoming_backg"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Cancel Booking"/>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Re-schedule"/>


                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="1.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Start"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>