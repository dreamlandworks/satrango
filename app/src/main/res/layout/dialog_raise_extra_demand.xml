<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_positive_round"

    >

    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
                android:id="@+id/txtclose"
            android:drawableRight="@drawable/ic_cross"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textAlignment="center"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/vendororange"
            android:text="Work Description" />



        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/gray_corner2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="Adv for Material"
                android:inputType="text"
                android:drawableRight="@drawable/ic_baseline_expand"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:theme="@style/AppTheme1" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/signIn_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edtamount"
                    android:layout_width="match_parent"
                    android:theme="@style/AppTheme1"
                    android:hint="₹"
                     android:inputType="number"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="@dimen/_14sdp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical">



        <TextView
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add More Slots"
            android:drawableRight="@drawable/ic_addmore"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textStyle="bold"
            android:textColor="@color/vendorprimerycolor"
            android:textSize="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/txttotal"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text=" ₹"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/quicksand_bold"/>



    </LinearLayout>


    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnsubmit"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/greenbutton"
            android:text="Submit"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp" />

    </LinearLayout>

</LinearLayout>