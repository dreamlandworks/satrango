<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/verticalcardview"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:paddingRight="15dp">



                            <TextView
                                android:fontFamily="@font/quicksand_bold"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="My Tariff is"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"/>


                            <LinearLayout
                                android:weightSum="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:id="@+id/signIn_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edt_per_hr"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="@dimen/_15sdp"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:hint="Per Hour"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_14sdp"
                                        android:textColor="@color/black"
                                        android:maxLines="1"
                                        android:inputType="number"
                                        android:theme="@style/AppTheme1" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:id="@+id/signIn_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edt_per_day"

                                        android:layout_width="match_parent"
                                        android:theme="@style/AppTheme1"
                                        android:hint="Per Day"
                                        android:inputType="number"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_14sdp"
                                        android:maxLines="1"

                                        android:textColor="@color/black"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:layout_height="match_parent" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:weightSum="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:id="@+id/VSMinCharges"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edt_min_charge"

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="@dimen/_15sdp"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:hint="Min. Charges"
                                        android:inputType="number"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_14sdp"
                                        android:textColor="@color/black"
                                        android:maxLines="1"
                                        android:editable="false"
                                        android:theme="@style/AppTheme1" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:id="@+id/VS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:id="@+id/edt_extra_charge"
                                        android:theme="@style/AppTheme1"
                                        android:hint="Extra Charge"
                                        android:inputType="number"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_14sdp"
                                        android:maxLines="1"
                                        android:textColor="@color/black"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:editable="false"
                                        android:layout_height="match_parent" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/vendorprimerycolor"
                                android:text="# Extra Charges Applicable Only For Single Move Categories During Night Time/ Peak Timing Bookings"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/quicksand_bold"/>

                            <View
                                android:layout_margin="@dimen/_20sdp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:background="#CCCCCC"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView

                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="My Availability"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp"/>

                                <TextView
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/vendororange"
                                    android:text="(You can always use offline when busy)"
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"/>



                            </LinearLayout>



                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Slot-1"
                                android:textSize="@dimen/_14sdp"
                                android:fontFamily="@font/quicksand_bold"/>




                            <LinearLayout
                                android:id="@+id/layout_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec_slot"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </androidx.recyclerview.widget.RecyclerView>

                            </LinearLayout>




                            <LinearLayout
                                android:id="@+id/lladd"
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:orientation="vertical">



                                <TextView
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Update/Add More Slots"
                                    android:drawableRight="@drawable/ic_addmore"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_below="@+id/verticalcardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:layout_weight="1"
                            android:id="@+id/Vcancel"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/greenborderbutton"
                            android:text="Back"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/vendorprimerycolor"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp" />


                        <Button
                            android:layout_weight="1"
                            android:id="@+id/btn_next"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/greenbutton"
                            android:text="Save"
                            android:textAllCaps="false"
                            android:textStyle="bold"

                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>



</LinearLayout>