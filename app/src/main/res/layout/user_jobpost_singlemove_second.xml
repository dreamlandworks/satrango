<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent">


        <ImageView
            android:id="@+id/back"

            android:layout_gravity="left"
            android:src="@drawable/ic_backs"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"/>

        <TextView
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="back" />

        <TextView
            android:layout_marginLeft="@dimen/_100sdp"
            android:id="@+id/textView"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Cancel Booking" />

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_weight="1.1"
            android:layout_gravity="right"
            android:src="@drawable/userquestionmark"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_yellowline"/>

    <ScrollView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  <ImageView
                  android:layout_gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:adjustViewBounds="true"
                  android:src="@drawable/loginbackground"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@color/colorPrimaryDark"/>


            <TextView
                android:id="@+id/onestape"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_26sdp"
                android:text="Post your Job"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/circlebackground"
                    android:padding="@dimen/_5sdp"
                    android:text="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:background="@color/grey_400" />

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/circlebackground"
                    android:padding="@dimen/_5sdp"
                    android:text="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:background="@color/grey_400" />

                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/inactivebackground"
                    android:padding="@dimen/_5sdp"
                    android:text="3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />


            </LinearLayout>




            <RelativeLayout
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/verticalcardview"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:paddingRight="15dp">

                            <LinearLayout
                                android:layout_marginBottom="@dimen/_14sdp"
                                android:layout_marginTop="@dimen/_50sdp"
                                android:weightSum="4"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:text="Bid Per"/>

                                <androidx.cardview.widget.CardView
                                        android:id="@+id/cdhour"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_3sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardUseCompatPadding="true">


                                    <TextView
                                        android:padding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Hour"/>


                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cdday"

                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_3sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardUseCompatPadding="true">

                                    <TextView
                                        android:padding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Day"/>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cdjob"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_3sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardUseCompatPadding="true">


                                    <TextView
                                        android:padding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Job"/>


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_marginTop="@dimen/_30sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:textAlignment="center"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="italic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bid Range"/>

                                    <TextView
                                        android:id="@+id/txtminrange"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        />

                                    <TextView
                                        android:id="@+id/txtmaxrange"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>
                                <LinearLayout
                                    android:weightSum="3"
                                    android:orientation="horizontal"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_weight="1.25"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="₹0"/>

                                    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                                        android:layout_weight=".6"
                                        android:id="@+id/rangeSeekbar"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:corner_radius="10"
                                        app:min_value="1"
                                        app:max_value="10000"
                                        app:gap="10"
                                        app:bar_color="@color/yellow"
                                        app:bar_highlight_color="#2434AD"
                                        app:left_thumb_color="@color/yellow"
                                        app:right_thumb_color="@color/yellow"
                                        app:left_thumb_color_pressed="@color/yellow"
                                        app:right_thumb_color_pressed="@color/yellow"
                                        app:data_type="_integer"/>
                                    <TextView
                                        android:layout_weight="1.15"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="₹10000"/>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginBottom="@dimen/_14sdp"
                                android:weightSum="4"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="Estimated Time"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_3sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardUseCompatPadding="true">


                                    <EditText
                                        android:id="@+id/edtno"
                                        android:padding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:hint="1"
                                         />


                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cdestday"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_3sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardUseCompatPadding="true">

                                    <TextView
                                        android:padding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Days"/>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cdhours"

                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_3sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardUseCompatPadding="true">


                                    <TextView
                                        android:padding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Hours"/>


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <TextView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="Accept Bids for"/>
                            <LinearLayout
                                android:layout_marginBottom="@dimen/_14sdp"
                                android:weightSum="3"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cdbidoneday"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_3sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardUseCompatPadding="true">


                                    <TextView
                                        android:padding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="1 Day"/>


                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cdbidthreday"

                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_3sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardUseCompatPadding="true">

                                    <TextView
                                        android:padding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="3 Days"/>

                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cdbidsevenday"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/_3sdp"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardUseCompatPadding="true">


                                    <TextView
                                        android:padding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/quicksand_bold"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="7 Days"/>


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_below="@+id/verticalcardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:background="@drawable/gray_corner"
                            android:layout_weight="1"
                            android:id="@+id/Vcancel"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:text="Cancel"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp" />


                        <Button
                            android:layout_weight="1"
                            android:id="@+id/btnnextt"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/button"                            android:text="Next"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageView
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="114dp"
                    android:src="@drawable/ic_singlemove2" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>