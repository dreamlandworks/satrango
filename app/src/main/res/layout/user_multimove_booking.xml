<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">


        <ImageView
            android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="left"
            android:src="@drawable/ic_backs" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_100sdp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Booking Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_weight="1.1"
            android:src="@drawable/images" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:src="@drawable/ic_yellowline" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight=".8"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quickstandbold"
                                android:text="Complete your Booking"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1.2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/circlebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_gravity="center"
                                    android:background="@color/grey_400" />

                                <TextView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/inactivebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="2"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_gravity="center"
                                    android:background="@color/grey_400" />

                                <TextView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/inactivebackground"
                                    android:padding="@dimen/_5sdp"
                                    android:text="3"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_200sdp"
                    android:background="@color/colorPrimaryDark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_5sdp"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        android:orientation="vertical">


                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="60dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:src="@drawable/images"
                                            app:civ_border_color="@color/colorPrimaryDark"
                                            app:civ_border_width="@dimen/_2sdp" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_10sdp"
                                        android:layout_weight=".7"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_weight=".7"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/txtname"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/poppinsmedium"
                                                android:text="John Doe"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_18sdp"
                                                android:textStyle="bold" />


                                            <TextView
                                                android:id="@+id/txtrank"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_10sdp"
                                                android:fontFamily="@font/poppinsmedium"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_20sdp"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_weight=".7"
                                            android:orientation="horizontal">


                                            <TextView
                                                android:id="@+id/txt_skill"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="AC Mechanic"
                                                android:textColor="@color/gray"
                                                android:textSize="@dimen/_14sdp" />

                                            <TextView
                                                android:id="@+id/txtrating"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_15sdp"
                                                android:drawableRight="@drawable/ic_stars"
                                                android:text="4.4"
                                                android:textColor="@color/gray"
                                                android:textSize="@dimen/_14sdp" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".7"
                                            android:orientation="horizontal">


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="3km away"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="@dimen/_10sdp" />

                                        </LinearLayout>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtmincharge"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:drawablePadding="@dimen/_7sdp"
                                            android:fontFamily="@font/poppinsmedium"
                                            android:text="₹ 567.00"
                                            android:textAlignment="center"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/_18sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/txtprice"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppinsmedium"
                                            android:text="150.00"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawablePadding="@dimen/_7sdp"
                                            android:fontFamily="@font/neosanspro_medium"
                                            android:text="Know more"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="italic" />

                                        <View
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:layout_gravity="center"
                                            android:background="@color/blue600" />

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp"
                                android:weightSum="3">


                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <RadioButton
                                        android:id="@+id/radio_booknow"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/quickstandbold"
                                        android:text="@string/immediate" />


                                    <RadioButton
                                        android:id="@+id/radio_booklater"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/quickstandbold"
                                        android:text="Book for Later" />
                                </RadioGroup>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">


                                <TextView
                                    android:id="@+id/signIn_DATE"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/gray_corner"
                                    android:drawableLeft="@drawable/ic_calenders"
                                    android:drawableRight="@drawable/ic_graycheck"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:focusable="true"
                                    android:hint="DD-MM-YY"
                                    android:imeOptions="actionNext"
                                    android:inputType="textEmailAddress"
                                    android:isScrollContainer="true"
                                    android:overScrollMode="always"
                                    android:padding="@dimen/_10sdp"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"
                                    android:singleLine="false"
                                    android:textSize="16sp"
                                    android:theme="@style/SignInSignUpEditText"
                                    android:windowSoftInputMode="stateAlwaysVisible" />

                                <TextView
                                    android:id="@+id/signIn_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/gray_corner"
                                    android:drawableLeft="@drawable/ic_timer"
                                    android:drawableRight="@drawable/ic_graycheck"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:focusable="true"
                                    android:hint="DD-MM-YY"
                                    android:imeOptions="actionNext"
                                    android:inputType="textEmailAddress"
                                    android:isScrollContainer="true"
                                    android:overScrollMode="always"
                                    android:padding="@dimen/_10sdp"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"
                                    android:singleLine="false"
                                    android:textSize="16sp"
                                    android:theme="@style/SignInSignUpEditText"
                                    android:windowSoftInputMode="stateAlwaysVisible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:text="Start location"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/CURRENTLOCATION"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/gray_corner"
                                    android:drawableLeft="@drawable/ic_location_searching"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:focusable="true"
                                    android:hint="@string/location"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:isScrollContainer="true"
                                    android:overScrollMode="always"
                                    android:padding="@dimen/_10sdp"
                                    android:scrollbarStyle="insideInset"
                                    android:singleLine="false"
                                    android:text="Flat No. 417A, Bank Colony, Vijayawada"
                                    android:textSize="12sp"
                                    android:theme="@style/SignInSignUpEditText"
                                    android:windowSoftInputMode="stateAlwaysVisible" />

                                <LinearLayout
                                    android:id="@+id/layoutList"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"></LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/RvPaidRequest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10sdp"></androidx.recyclerview.widget.RecyclerView>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:text="End Location"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />

                                <EditText
                                    android:id="@+id/EndLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/gray_corner"
                                    android:drawableLeft="@drawable/ic_location_searching"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:focusable="true"
                                    android:hint="@string/location"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:isScrollContainer="true"
                                    android:overScrollMode="always"
                                    android:padding="@dimen/_10sdp"
                                    android:scrollbarStyle="insideInset"
                                    android:singleLine="false"
                                    android:textSize="12sp"
                                    android:theme="@style/SignInSignUpEditText"
                                    android:windowSoftInputMode="stateAlwaysVisible" />


                                <Button
                                    android:id="@+id/addanother"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@color/colorPrimary"
                                    android:drawableLeft="@drawable/ic_baseline_addwhite"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:paddingLeft="@dimen/_20sdp"
                                    android:paddingRight="@dimen/_20sdp"
                                    android:text="Add Another Location"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_16sdp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:text="Approx. Weight"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_14sdp"
                                    android:orientation="horizontal"
                                    android:weightSum="3">


                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cd_lite"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardUseCompatPadding="true">


                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:gravity="center"
                                            android:padding="@dimen/_10sdp"
                                            android:text="Lite"
                                            android:textSize="@dimen/_14sdp" />


                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cd_medium"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardUseCompatPadding="true">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:gravity="center"
                                            android:padding="@dimen/_10sdp"
                                            android:text="Medium"
                                            android:textSize="@dimen/_14sdp" />

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cd_heavy"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="@dimen/_10sdp"
                                        app:cardElevation="@dimen/_3sdp"
                                        app:cardUseCompatPadding="true">


                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:fontFamily="@font/quicksand_bold"
                                            android:gravity="center"
                                            android:padding="@dimen/_10sdp"
                                            android:text="Heavy"
                                            android:textSize="@dimen/_14sdp" />


                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:text="Task to be done at"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />


                                <EditText
                                    android:id="@+id/edt_desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_100sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@drawable/gray_corner"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:focusable="true"
                                    android:hint="@string/location"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:isScrollContainer="true"
                                    android:overScrollMode="always"
                                    android:padding="@dimen/_10sdp"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"
                                    android:textSize="16sp"
                                    android:theme="@style/SignInSignUpEditText"
                                    android:windowSoftInputMode="stateAlwaysVisible" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:fontFamily="@font/quicksand_bold"
                                    android:text="Attachments"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_20sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/img_add"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:layout_margin="@dimen/_10sdp"
                                        android:src="@drawable/addimage" />

                                </LinearLayout>


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:text="@string/next"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
