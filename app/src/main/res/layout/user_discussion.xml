<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/yellow_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        app:civ_border_width="@dimen/_3sdp"
                        android:src="@drawable/images"
                        app:civ_border_color="@color/yellow"/>

                                     <TextView
                                         android:layout_marginTop="@dimen/_10sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableRight="@drawable/ic_stars"
                                android:layout_width="wrap_content"
                                         android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_10sdp"
                                android:text="4.8"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight=".7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="Mr. Pablo Escobar"/>


                        </LinearLayout>
                        <LinearLayout
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_weight="1.3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_10sdp"
                                android:text="12 Dec 2020 at 09:45 PM"/>



                        </LinearLayout>

                    </LinearLayout>



                    <TextView
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="right"
                        android:text="Being a Blue collar Job this needs to be uniquely coloured so that users can easily understand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
</LinearLayout>