<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/greenborderwhitebutton"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtbid_min_range"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:gravity="right"
                                android:textSize="@dimen/_14sdp"
                                android:layout_gravity="right"
                                android:text="₹250.00 -"
                                android:textStyle="bold"
                                android:textColor="@color/red"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/txtbid_max_range"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:gravity="right"
                                android:textSize="@dimen/_14sdp"
                                android:layout_gravity="right"
                                android:text="500.00"
                                android:textStyle="bold"
                                android:textColor="@color/red"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:id="@+id/ll_details"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight=".5"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/txtdescription"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:drawableRight="@drawable/ic_nexts"
                                android:layout_gravity="right"
                                android:text="Being a Blue collar Job this needs to be uniquely coloured so that users can easily understand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_nexts"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight=".7"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">


                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_14sdp"
                                android:text="Awarded to"/>


                            <View
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_2sdp"
                                android:background="@color/colorPrimaryDark"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:paddingBottom="@dimen/_5sdp"
                    android:weightSum="2"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/ic_bookinginprogress"
                    android:layout_height="@dimen/_70sdp">

                    <LinearLayout
                        android:layout_weight=".7"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/images"
                                app:civ_border_color="@color/colorPrimaryDark"
                                app:civ_border_width="@dimen/_2sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight=".5"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtv_name"
                                android:fontFamily="@font/poppinsmedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="@dimen/_16sdp"
                                android:text="John Doe"/>

                            <TextView
                                android:id="@+id/txtbid_amount"
                                android:fontFamily="@font/poppinsmedium"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"
                                android:text="₹ 567.00"/>

                        </LinearLayout>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1.3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Status"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="center"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Awarded"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>