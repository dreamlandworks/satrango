<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Setting.ComplaintFragment"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    >







    <TextView
        android:id="@+id/txtdate"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="Today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Status :"
                    android:textAllCaps="false"
                    android:textColor="@color/vendororange"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtstats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Description"
                    android:textAllCaps="false"
                    android:textColor="@color/vendorprimerycolor"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtrequestid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Average Bid"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/vendorprimerycolor"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />




            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtmessages"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="We are sorry and feel regretted for the inconvenience occured. Please let us help you finding a suitable solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>







    </LinearLayout>












</LinearLayout>