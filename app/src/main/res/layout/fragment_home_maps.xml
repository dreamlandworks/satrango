<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingClass"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <LinearLayout
        android:layout_marginBottom="@dimen/_100sdp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
        android:weightSum="2"
        android:background="@drawable/ic_homebackgrounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_15sdp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:weightSum="2"
                android:padding="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Location"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/txt_mylocation"
                android:layout_marginBottom="@dimen/_15sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@drawable/locationbackground"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Karol Bagh Delhi"
                android:drawablePadding="@dimen/_7sdp"
                android:drawableLeft="@drawable/ic_location_searching"/>

        </LinearLayout>

                <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_5sdp"
            android:weightSum="3"
            android:layout_weight=".9"
            android:background="@drawable/greenbackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1.25"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"/>

            <Switch
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/simpleSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight=".75"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servide Provider"/>

        </LinearLayout>


                <LinearLayout
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight=".9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                   <TextView
                       android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Change Profile"
                  />

                  <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/yellow"
                         android:layout_width="@dimen/_100sdp"
                         app:cardUseCompatPadding="true"
                         app:cardElevation="@dimen/_3sdp"
                         android:layout_height="@dimen/_60sdp"
                         app:cardCornerRadius="@dimen/_20sdp">

                         <LinearLayout

                             android:elevation="@dimen/_15sdp"
                             android:background="@drawable/yellowsbutton"
                             android:layout_gravity="center"
                             android:gravity="center"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal">



                             <ImageView
                                 android:layout_width="@dimen/_18sdp"
                                 android:layout_height="wrap_content"
                                 android:src="@drawable/userimage"/>

                             <TextView
                                 android:paddingRight="@dimen/_3sdp"
                                 android:layout_gravity="center"
                                 android:layout_marginLeft="@dimen/_10sdp"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="USER"
                                 android:textStyle="bold"
                                 android:textSize="@dimen/_12sdp"
                                 android:textColor="@color/black"/>

                         </LinearLayout>



                     </androidx.cardview.widget.CardView>





                       <LinearLayout
                           android:layout_marginRight="@dimen/_10sdp"
                        android:id="@+id/l_provider"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROVIDER"
                            android:textStyle="bold"
                            android:fontFamily="@font/quicksand_bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/gray"/>

                    </LinearLayout>

                </LinearLayout>



              </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


            <AutoCompleteTextView
                android:id="@+id/searchview"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:scrollbars="none"
                android:drawableRight="@drawable/ic_mic"
                android:background="@drawable/searchbackground"
                android:padding="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="search in thousands of services"
                android:drawablePadding="@dimen/_7sdp"
                android:drawableLeft="@drawable/ic_search"
                />


        </LinearLayout>

        <LinearLayout
        android:id="@+id/AV_SEARCH"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    </LinearLayout>

        <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PopularServices"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtviewallservices"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:padding="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View More"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
    </LinearLayout>



        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:weightSum="4"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ExploreCategories"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtcategoryviewall"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View More"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
             android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rec_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</androidx.recyclerview.widget.RecyclerView>



        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Hired Professionals"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginRight="@dimen/_15sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View More"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
        </LinearLayout>


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/recvtopicks"
                    android:layout_width="match_parent"
                  android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
             </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>