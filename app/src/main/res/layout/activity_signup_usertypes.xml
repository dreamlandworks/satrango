<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupUsertypes">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/backgroundnew"
                />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="@dimen/_40sdp"
                    android:foregroundGravity="center"
                    android:layout_width="match_parent"
                    android:id="@+id/cirimg"
                    android:layout_height="@dimen/_120sdp"
                    android:src="@drawable/circlelogo" />

            <ImageView
                android:layout_below="@+id/cirimg"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_gravity="center"
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/logo"
                />



            <RelativeLayout
                android:layout_marginTop="@dimen/_260sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="gone"
                            android:textAlignment="center"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Welcome to SATRANGO, Have a nice day with SATRANGO"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />



                        <LinearLayout
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="32dp"
                            android:orientation="vertical"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="center"
                                android:textSize="@dimen/_26sdp"
                                android:layout_margin="@dimen/_15sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:textStyle="bold"
                                android:text="Login as"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <Button

                                    android:id="@+id/UserTypes"
                                    android:layout_width="@dimen/_250sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/button"
                                    android:text="User"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:layout_marginRight="5dp" />

                                <Button
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:id="@+id/Serviceprovider"
                                    android:layout_width="@dimen/_250sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/button"
                                    android:text="Service Provider"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:layout_marginRight="5dp" />



                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>